<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h3 class="media-heading"><%= @user.name %></h3>
        <p>Account Type: <%= @user.role %></p>
        <p>Contributions: <%= pluralize(@user.wikis.count, 'wiki') %></p>
      </div>
    </div>
  </div>
</div>
<hr />
<h3>WIKIS</h3>
  <%= render @user.wikis %>